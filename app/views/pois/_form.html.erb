    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, :size=> "35x4"%>
    </div>
    <br>
    <div class="field">
      <%= f.label :picture %><br>
      <%= f.file_field :picture %>
    </div>
    <br>
    <div class="field">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>
    <br>
    <button class="btn btn-success">
      <input name="commit" type="submit" value="Submit" style="background:none; border-width:0px; color:white;" />
    </button>

<% end %>
