<%= form_for(@poi) do |f| %>
    <% if @poi.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@poi.errors.count, "error") %> prohibited this poi from being saved:</h2>

          <ul>
            <% @poi.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
