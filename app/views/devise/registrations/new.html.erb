<div class="well bs-component" style=" width:350px; margin-left: auto; margin-right: auto; margin-top: 50px;">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true %></div>
        <br>
        <div><%= f.label :password %><br />
          <%= f.password_field :password %></div>
        <br>
        <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation %></div>
        <br>
        <div><%= f.label :roles %><br />
          <%= f.collection_select :role, User::USER_ROLES , :to_s, :humanize %></div>
        <br>

        <div>
        <button class="btn btn-success">
          <input name="commit" type="submit" value="Sign up" style="background:none; border-width:0px; color:white;" />
        </button>
        </div>

    <% end %>
    <br><br>
</div>

<div style=" width:350px; margin-left: auto; margin-right: auto; margin-top: 5px; padding-left: 25px;">
  <%= render "devise/shared/links" %>
</div>
